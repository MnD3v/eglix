<svg width="600" height="700" viewBox="0 0 600 700" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FF2600;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#ff4d33;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ff6b47;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="church" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#ffffff;stop-opacity:0.7" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="600" height="700" fill="url(#bg)"/>
  
  <!-- Church building -->
  <g transform="translate(300, 200)">
    <!-- Main building -->
    <rect x="-80" y="-60" width="160" height="120" fill="url(#church)" rx="8"/>
    
    <!-- Roof -->
    <polygon points="-100,-60 0,-120 100,-60" fill="url(#church)"/>
    
    <!-- Cross -->
    <rect x="-4" y="-140" width="8" height="40" fill="url(#church)"/>
    <rect x="-20" y="-130" width="40" height="8" fill="url(#church)"/>
    
    <!-- Door -->
    <rect x="-15" y="20" width="30" height="40" fill="url(#bg)" rx="4"/>
    
    <!-- Windows -->
    <rect x="-60" y="-20" width="20" height="20" fill="url(#bg)" rx="2"/>
    <rect x="40" y="-20" width="20" height="20" fill="url(#bg)" rx="2"/>
    
    <!-- Bell tower -->
    <rect x="70" y="-80" width="20" height="60" fill="url(#church)" rx="4"/>
    <circle cx="80" cy="-90" r="8" fill="url(#church)"/>
  </g>
  
  <!-- Decorative elements -->
  <circle cx="100" cy="100" r="3" fill="white" opacity="0.3"/>
  <circle cx="500" cy="150" r="2" fill="white" opacity="0.4"/>
  <circle cx="80" cy="500" r="4" fill="white" opacity="0.2"/>
  <circle cx="520" cy="600" r="3" fill="white" opacity="0.3"/>
  
  <!-- Text -->
  <text x="300" y="450" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="32" font-weight="bold">Eglix</text>
